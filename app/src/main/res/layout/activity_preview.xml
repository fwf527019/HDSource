<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/e6"
    android:orientation="vertical">


    <include layout="@layout/public_tital"></include>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scrollbars="none">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <com.facebook.drawee.view.SimpleDraweeView
                android:id="@+id/product_pic"
                android:scaleType="centerInside"
                android:layout_width="match_parent"
                android:layout_height="360dp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <com.cdhd.utils.MyTextView
                    android:id="@+id/produce_name"
                    android:layout_width="match_parent"
                    android:layout_height="41dp"
                    android:layout_marginLeft="28dp"
                    android:gravity="center_vertical"
                    android:text="商品名称"
                    android:textColor="@color/blacks"
                    android:textSize="14sp" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="15dp"
                    android:layout_marginRight="15dp"
                    android:background="@drawable/kuang_r">

                    <com.cdhd.utils.MyTextView
                        android:id="@+id/eseential_content"
                        style="@style/text_66_12"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="10dp"
                        android:lineSpacingMultiplier="1.5"
                        android:textColor="@color/grgray" />
                </LinearLayout>
            </LinearLayout>

            <com.cdhd.utils.MyTextView
                android:layout_width="match_parent"
                android:layout_height="49dp"
                android:layout_marginLeft="28dp"
                android:gravity="center_vertical"
                android:text="生产信息"
                android:textColor="@color/blacks"
                android:textSize="14sp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15dp"

                android:layout_marginRight="15dp"
                android:background="@drawable/kuang_r"
                android:orientation="vertical">

                <com.cdhd.utils.MyTextView
                    android:id="@+id/produce_content"
                    style="@style/text_66_12"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="10dp"
                    android:lineSpacingMultiplier="1.5"
                    android:text="内容" />

                <HorizontalScrollView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:scrollbars="none">

                    <LinearLayout
                        android:id="@+id/pic_produce_ll"
                        android:layout_width="match_parent"
                        android:layout_height="70dp"
                        android:layout_marginBottom="10dp"
                        android:orientation="horizontal"
                        android:visibility="gone"></LinearLayout>
                </HorizontalScrollView>

            </LinearLayout>


            <com.cdhd.utils.MyTextView
                android:layout_width="match_parent"
                android:layout_height="49dp"
                android:layout_marginLeft="28dp"
                android:gravity="center_vertical"
                android:text="检测信息"
                android:textColor="@color/blacks"
                android:textSize="14sp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp"
                android:background="@drawable/kuang_r"

                android:orientation="vertical">

                <com.cdhd.utils.MyTextView
                    android:id="@+id/test_content"
                    style="@style/text_66_12"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="10dp"
                    android:lineSpacingMultiplier="1.5"
                    android:text="内容" />

                <HorizontalScrollView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:scrollbars="none">

                    <LinearLayout
                        android:id="@+id/pic_test_ll"
                        android:layout_width="match_parent"
                        android:layout_height="70dp"
                        android:layout_marginBottom="10dp"
                        android:orientation="horizontal"
                        android:visibility="gone"></LinearLayout>
                </HorizontalScrollView>
            </LinearLayout>


            <com.cdhd.utils.MyTextView
                android:layout_width="match_parent"
                android:layout_height="49dp"
                android:layout_marginLeft="28dp"
                android:gravity="center_vertical"
                android:text="生产基地信息"
                android:textColor="@color/blacks"
                android:textSize="14sp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp"
                android:background="@drawable/kuang_r"
                android:orientation="vertical">

                <com.cdhd.utils.MyTextView
                    android:id="@+id/place_content"
                    style="@style/text_66_12"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="10dp"
                    android:lineSpacingMultiplier="1.5"
                    android:text="内容" />

                <HorizontalScrollView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:scrollbars="none">

                    <LinearLayout
                        android:id="@+id/pic_place_ll"
                        android:layout_width="match_parent"
                        android:layout_height="70dp"
                        android:layout_marginBottom="10dp"
                        android:orientation="horizontal"
                        android:visibility="gone">

                    </LinearLayout>
                </HorizontalScrollView>
            </LinearLayout>


            <com.cdhd.utils.MyTextView
                android:layout_width="match_parent"
                android:layout_height="49dp"
                android:layout_marginLeft="28dp"
                android:gravity="center_vertical"
                android:text="生产企业信息"
                android:textColor="@color/blacks"
                android:textSize="14sp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"

                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp"
                android:background="@drawable/kuang_r"
                android:orientation="vertical">

                <com.cdhd.utils.MyTextView
                    android:id="@+id/enterprise_content"
                    style="@style/text_66_12"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="10dp"
                    android:lineSpacingMultiplier="1.5"
                    android:text="内容" />

                <HorizontalScrollView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:scrollbars="none">

                    <LinearLayout
                        android:id="@+id/pic_enterprise_ll"
                        android:layout_width="match_parent"
                        android:layout_height="70dp"
                        android:layout_marginBottom="10dp"
                        android:orientation="horizontal"
                        android:visibility="gone">

                    </LinearLayout>
                </HorizontalScrollView>
            </LinearLayout>

        </LinearLayout>


    </ScrollView>
</LinearLayout>