<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:background="@color/main_green">

        <ImageView
            android:id="@+id/back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:background="@mipmap/back_ico" />

        <TextView
            android:id="@+id/titail"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:text="标题"
            android:textColor="@color/white"
            android:textSize="18sp" />


        <LinearLayout
            android:id="@+id/titail_right"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center"
            android:orientation="vertical">

            <TextView
                android:id="@+id/righ"
                android:layout_width="80dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:gravity="center"
                android:text="预览"
                android:textColor="@color/white"
                android:textSize="16sp" />
        </LinearLayout>
    </LinearLayout>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="290dp">

        <com.facebook.drawee.view.SimpleDraweeView
            android:id="@+id/pic_edter"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />

        <TextView
            android:id="@+id/name_titail"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_gravity="bottom"
            android:background="@color/grgray"
            android:gravity="center"
            android:text="标题"
            android:textColor="@color/white"
            android:textSize="16sp" />
    </FrameLayout>

    <LinearLayout
        android:layout_marginTop="20dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:layout_marginBottom="20dp"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:orientation="horizontal">

            <LinearLayout
                android:id="@+id/base_info"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="vertical">

                <ImageView
                    android:layout_width="90dp"
                    android:layout_height="90dp"
                    android:background="@mipmap/produce_edt1" />

                <TextView
                    android:layout_width="90dp"
                    android:layout_height="30dp"
                    android:gravity="center"
                    android:textSize="14sp"
                    android:textColor="#333333"
                    android:text="基本信息" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/produce_info"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="vertical">

                <ImageView
                    android:layout_width="90dp"
                    android:layout_height="90dp"
                    android:background="@mipmap/produce_edt2" />

                <TextView
                    android:layout_width="90dp"
                    android:layout_height="30dp"
                    android:gravity="center"
                    android:textSize="14sp"
                    android:textColor="#333333"
                    android:text="生产信息" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/test_info"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="vertical">

                <ImageView
                    android:layout_width="90dp"
                    android:layout_height="90dp"
                    android:background="@mipmap/produce_edt3" />

                <TextView
                    android:layout_width="90dp"
                    android:layout_height="30dp"
                    android:gravity="center"
                    android:textSize="14sp"
                    android:textColor="#333333"
                    android:text="检测信息" />
            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:id="@+id/logistical_info"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="vertical">

                <ImageView
                    android:layout_width="90dp"
                    android:layout_height="90dp"
                    android:background="@mipmap/produce_edt4" />

                <TextView
                    android:layout_width="90dp"
                    android:layout_height="30dp"
                    android:gravity="center"
                    android:textSize="14sp"
                    android:textColor="#333333"
                    android:text="物流信息" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/place_infon"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="vertical">

                <ImageView
                    android:layout_width="90dp"
                    android:layout_height="90dp"
                    android:background="@mipmap/produce_edt5" />

                <TextView
                    android:layout_width="90dp"
                    android:layout_height="30dp"
                    android:gravity="center"
                    android:textSize="14sp"
                    android:textColor="#333333"
                    android:text="生产基地信息" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/canpany_info"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="vertical">

                <ImageView
                    android:layout_width="90dp"
                    android:layout_height="90dp"
                    android:background="@mipmap/produce_edt6" />

                <TextView
                    android:layout_width="90dp"
                    android:layout_height="30dp"
                    android:gravity="center"
                    android:textSize="14sp"
                    android:textColor="#333333"
                    android:text="生产企业信息" />
            </LinearLayout>

        </LinearLayout>

    </LinearLayout>


</LinearLayout>